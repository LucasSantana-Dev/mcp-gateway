{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 3am on Monday"],
  "timezone": "UTC",
  "labels": ["dependencies", "automated"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "packageRules": [
    {
      "description": "Python dependencies - auto-merge patch and minor with stabilization period",
      "matchManagers": ["pip_requirements", "pip_setup"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Python dependencies",
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Python major updates - require manual review",
      "matchManagers": ["pip_requirements", "pip_setup"],
      "matchUpdateTypes": ["major"],
      "groupName": "Python major updates",
      "automerge": false,
      "labels": ["dependencies", "major-update", "breaking-change"]
    },
    {
      "description": "Context Forge gateway image - manual review required",
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchPackageNames": ["ghcr.io/ibm/mcp-context-forge"],
      "groupName": "Context Forge gateway",
      "automerge": false,
      "schedule": ["before 3am on Monday"],
      "labels": ["dependencies", "docker", "gateway"]
    },
    {
      "description": "GitHub Actions - auto-merge patch and minor",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "GitHub Actions major - require manual review",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "github-actions", "major-update"]
    },
    {
      "description": "Security vulnerabilities - immediate auto-merge",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "automerge": true,
      "minimumReleaseAge": null,
      "labels": ["dependencies", "security"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Updates Dashboard",
  "assignees": [],
  "reviewers": []
}
