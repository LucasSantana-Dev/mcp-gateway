# Sentry Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
SENTRY_DB_PASSWORD=your_secure_postgres_password_here

# Sentry Configuration
SENTRY_SECRET_KEY=your_super_long_random_secret_key_at_least_32_characters

# Email Configuration (for alerts and notifications)
SENTRY_EMAIL_HOST=smtp.gmail.com
SENTRY_EMAIL_PORT=587
SENTRY_EMAIL_USER=your_email@gmail.com
SENTRY_EMAIL_PASSWORD=your_app_password
SENTRY_SERVER_EMAIL=sentry@yourdomain.com
SENTRY_ADMIN_EMAIL=admin@yourdomain.com

# Security Settings
# Generate these with: openssl rand -base64 32
SENTRY_SSO_KEY=your_sso_key_here
SENTRY_SSO_SECRET=your_sso_secret_here

# Performance Settings
SENTRY_WEB_CONCURRENCY=4
SENTRY_DB_POOL_SIZE=25
SENTY_DB_MAX_OVERFLOW=25